/* pages/mine/mine.wxss */


/* 我的页面 */

.mine_login_top {
    padding: 20rpx 34rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.mine_login_top .userinfo {
    width: 126rpx;
    height: 126rpx;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0px 15px 30px 0 #EBEBEB;
}

.mine_login_top .userinfo-avatar{
    width: 100%;
    height: 100%;
}

.mine_login_top .userinfo-nickname {
    font-size: 34rpx;
    color: #333333;
    margin-left: 30rpx;
}
.mine_login_top .set{
  position: absolute;
  width:38rpx;
  height:36rpx;
  top:20rpx;
  right:36rpx;
}
.mine_fund {
    padding: 0 30rpx;
    margin-top: 50rpx;
}

.mine_fund .fund_in {
    display: flex;
    justify-content: space-around;
    text-align: center;
    background: #00B69C;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    padding: 20rpx 0 20rpx;
    /* height:126rpx; */
    align-items: center;
}

.mine_fund .fund_in .num {
    font-size: 40rpx;
    font-weight: bold;
    color: #fff;
}

.mine_fund .fund_in .text {
    font-size: 22rpx;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 6rpx;
}

.mine_fund .fund_in .vertical_line {
    background: rgba(255, 255, 255, 0.3);
    width: 2rpx;
    height: 68rpx;
}

.mine_group {
    padding: 20rpx 33rpx 50rpx;
}

.mine_group .mine_group_item {
    height: 120rpx;
    border-bottom: 1rpx solid #EEEEEE;
}

.mine_group_item navigator {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content:space-between;
    align-items: center;
}
.mine_group_item .item_left{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.mine_group_item .item_right{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item_left .item_left_icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 25rpx;
}
.item_left .item_left_text{
  font-size:30rpx;
  color:#333333;
}
.item_right .item_right_arrow {
    width: 16rpx;
    height: 28rpx;
    margin:3rpx 0 0 20rpx;
}
.item_right .item_right_text{
  font-size:26rpx;
  color:#555555;
}

.renzheng{
  height: 120rpx;
  border-radius: 5rpx;
  box-shadow:1px 2px 18px rgba(0,0,0,0.15);
  margin-top:14rpx;
  padding:0 30rpx;
  box-sizing: border-box;
}
.renzheng navigator{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.renzheng .rz_left{
  display: flex;
  align-items: center;
}
.renzheng .rz_left image{
  width:30rpx;
  height:33rpx;
  margin-right: 20rpx;
} 
.renzheng .rz_left text{
  font-size:30rpx;
  color:#333333;
  line-height: 33rpx;
}
.renzheng .rz_right{
  display: flex;
  align-items: center;
}
.renzheng .rz_right image{
  width: 16rpx;
  height: 28rpx;
  margin:2rpx 0 0 20rpx;
}
.renzheng .rz_right text{
  font-size:22rpx;
  color:#fff;
  background:#00B69C;
  width:88rpx;
  height:36rpx;
  border-radius: 8rpx;
  text-align: center;
}