/* pages/withdrawal/withdrawal.wxss */
.mybalance{
  padding:0 80rpx;
  text-align: center;
}
.mybalance .pic{
  width:120rpx;
  height:114rpx;
  margin:120rpx auto 0;
}
.mybalance .pic image{
  width:100%;
  height:100%;
}
.mybalance .txt{
  font-size:28rpx;
  color:#999999;
  margin-top: 25rpx;
}
.mybalance .money{
  font-size:72rpx;
  margin:120rpx 0 140rpx;
  font-weight: bold;
}
.mybalance .tx_btn{
  background: #00B69C;
  height: 78rpx;
  line-height: 76rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: normal;
}
.mybalance .explain{
  font-size: 26rpx;
  color:26px;
  margin-top: 50rpx;
}
.top{
  display: flex;
  justify-content: flex-end;
  padding:20rpx 30rpx;
}
.top text{
  font-size:28rpx;
  color:#333333;
}
.top .line{
  color:#DDDDDD;
  margin:0 20rpx;
}