/* pages/broadcast/broadcast.wxss */

/* 弹层 */

.maskView {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.04);
  position: fixed;
  display: flex;
  z-index: 999;
  flex-direction: column;
}

.backgroundimg {
  width: 228rpx;
  height: 460rpx;
  display: flex;
  top: 75rpx;
  right: 30rpx;
  flex-direction: column;
  position: absolute;
  background-color: white;
}

.listCell {
  margin-left: 25rpx;
  height: 92rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  align-items: center;
  justify-content: center;
}

.totle {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  align-items: center;
  justify-content: center;
}

.topButtonView {
  position: fixed;
  display: flex;
  flex-direction: row;
  height: 104rpx;
  width: 750rpx;
  background-color: #fff;
}

.playButton {
  width: 168rpx;
  height: 56rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  margin-top: 17rpx;
  margin-left: 31rpx;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.playIcon {
  width: 17rpx;
  height: 19rpx;
  margin-left: 30rpx;
}

.numberLabel {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  margin-left: 20rpx;
  margin-top: 24rpx;
}

.topLine {
  background-color: #eee;
  margin-top: 100rpx;
  left: 0rpx;
  right: 0rpx;
  width: 750rpx;
  height: 2rpx;
  position: absolute;
}

.fillButton {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: #333;
  right: 39rpx;
  /* position: absolute; */
  display: flex;
  position: absolute;
  margin-top: 25rpx;
}

.fillIcon {
  width: 26rpx;
  height: 23rpx;
  margin-left: 16rpx;
  margin-top: 7rpx;
}

.scrollView {
  top: 104rpx;
  width: 750rpx;
  margin-left: 0rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.scrollView .cell {
}

.cell .cellImageView {
  border-radius: 18rpx;
  /* position: relative; */
  display: flex;
  margin-top: 49rpx;
  margin-left: 30rpx;
  width: 130rpx;
  height: 130rpx;
}

.cell .titleLabel {
  position: relative;
  display: flex;
  margin-top: 30rpx;
  font-family: PingFang SC;
  font-size: 28rpx;
  color: #333;
  line-height: 46rpx;
  font-weight: 500;
  margin-left: 23rpx;
}

.cell .sjImageView {
  width: 119rpx;
  height: 29rpx;
  margin-top: 6rpx;
}

.cell .shImageView {
  width: 85rpx;
  height: 29rpx;
  margin-top: 6rpx;
}

.cell .createTimeLabel {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999;
  margin-left: 23rpx;
  /* position: absolute; */
  display: flex;
  margin-top: 59rpx;
}

.cell .expireTimeLabel {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999;
  margin-left: 18rpx;
}

.cell .distanceLabel {
  /* position: absolute; */
  margin-top: -33rpx;
  display: flex;
  flex-direction: row-reverse;
  margin-right: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999;
}

.lineView {
  width: 690rpx;
  height: 2rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  display: flex;
  background-color: #eee;
}

.itemPlayIcon {
  width: 44rpx;
  height: 44rpx;
  right: 30rpx;
  margin-top: -30rpx;
  position: absolute;
  display: flex;
}

.itemPauseIcon {
  width: 44rpx;
  height: 44rpx;
  right: 30rpx;
  margin-top: -30rpx;
  position: absolute;
  display: flex;
}
