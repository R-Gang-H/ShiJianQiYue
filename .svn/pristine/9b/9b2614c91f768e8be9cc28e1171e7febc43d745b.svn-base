/* pages/market/market.wxss */
/* 集市首页 */

.viewTop {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  align-items: center;
  z-index: 999;
  top: 0rpx;
}

.editSearch {
  height: 70rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(238, 238, 238, 1);
  box-shadow: 0px 0px 16px 0px rgba(150, 150, 150, 0.16);

}

.editSearch input {
  font-size: 26rpx;
  color: #333333;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 10rpx;
}

.tabs {
  display: flex;
  height: 85rpx;
  line-height: 85rpx;
  border-bottom: #EBECF1 1rpx solid;
}

.tabs .item {
  flex: 1;
  text-align: center;
  position: relative;
}

.tabs .item text {
  font-size: 30rpx;
  color: #999999;
  display: inline-block;
  height: 80rpx;
  padding: 0 20rpx;
}

.tabs .itemed text {
  color: #333333;
  font-weight: bold;
}

/*城市选择弹窗*/
.allCity {
  background-color: #ffffff;
  width: 100%;
  overflow: hidden;
}

.otherCity {
  background-color: #ffffff;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}

.cityList {
  height: 100%;
  flex: 1;
  background: rgba(248, 248, 248, 1);
  margin-bottom: 15rpx;
}

.cityList2 {
  height: 100%;
  flex: 1;
  background-color: #ffffff;
  margin-bottom: 15rpx;
}

.tvCityBlock {
  font-weight: bold;
  margin-top: 15rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.tvCity {
  margin-top: 15rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.btnCityId {
  color: #ffffff;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 54rpx;
  border-radius: 8rpx;
  font-family: PingFang SC;
  font-weight: 400;
  background-color: #00b89e;
  margin-top: 20rpx;

}


/* 排序弹窗 */
.viewSort {
  height: 100%;
  position: fixed;
  /* top: 125rpx; */
  background-color: #00333333;
  z-index: 992;
  width: 100%;
  overflow: hidden;
}

.viewSort .viewList {
  background-color: #ffffff;
  width: 100%;
  height: 230rpx;
  overflow: hidden;
}

.tvSortTv {
  font-weight: bold;
  font-size: 30rpx;
  color: #333333;
  margin-left: 57rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

.tvSort {
  font-size: 30rpx;
  color: #999999;
  margin-left: 57rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

/* 筛选弹窗 */
.viewFilter {
  height: 100%;
  position: fixed;
  background-color: #00333333;
  z-index: 992;
  width: 100%;
}

.otherView {
  background-color: #ffffff;
  overflow: hidden;
  width: 100%;
  display: flex;
}

.viewFList {
  display: grid;
  width: 100%;
  overflow-x: hidden;
  /* 设置列、行大小 fr单位是等分分配列空间*/
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-gap: 10rpx;
  background-color: #ffffff;
  overflow: hidden;
  margin-bottom: 22rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
}

.viewFList-th {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  margin-top: 22rpx;
  width: 156rpx;
  height: 58rpx;
  background: rgba(248, 248, 248, 1);

}

.viewF-th {
  display: flex;
  width: 156rpx;
  height: 58rpx;
  background: rgba(0, 184, 158, 0.1);
  border: 1px solid rgba(0, 184, 158, 1);
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  margin-top: 22rpx;
}

.viewFList-td {
  background-color: #f8f8f8;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 26px;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

/* 网格列表布局 */
.table {
  display: grid;
  width: 100%;
  overflow-x: hidden;
  /* 设置列、行大小 fr单位是等分分配列空间*/
  grid-template-columns: 1fr 1fr;
  /* grid-template-rows: 200rpx 200rpx; */
  /* 有多余数据时，自动添加新行时默认行高为：200rpx */
  /* grid-auto-rows: 200rpx; */
  /* 设置网格线大小 */
  grid-gap: 10rpx;
  margin-top: 74px;

}

/* 
  font-weight: bold;  文字设置加粗 */
.table-th {
  border: 1px solid #E1E1E1;
  border-radius: 5rpx;
  /* display: flex; */
  /* justify-content: center; */
  align-items: center;
  margin: 10rpx;
}

.table-td {
  border: 1px solid #E1E1E1;
  border-radius: 5rpx;
  /* display: flex; */
  /* justify-content: center; */
  align-items: center;
  margin: 10rpx;
}

/* 头图 */
.icon_pic {
  /* 设置高度 */
  height: 420rpx;
  width: 100%;
}

.icon_pic image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

/* 标题 */
.list_name {
  margin-top: 20rpx;
  /* 文字加粗 */
  font-weight: bold;
  /* 字号 */
  font-size: 28rpx;
  /* 文字颜色 */
  color: #333333;
  /* 左边距 */
  margin-left: 21rpx;
}

/* 简介 */
.list_desc {
  /* 字号 */
  font-size: 22rpx;
  /* 文字颜色 */
  color: #333333;
  /* 上边距 */
  margin-top: 17rpx;
  /* 左边距 */
  margin-left: 21rpx;
}

/* 价钱 */
.list_money {
  float: left;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  flex-direction: row;


  margin-left: 21rpx;
  margin-top: 50rpx;
  margin-bottom: 15rpx;
  margin-right: 20rpx;
}

.list_money .name {
  color: #FF3333;
  margin-right: 15rpx;
}

.list_money .address {
  margin-right: 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}