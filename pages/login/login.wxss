/* pages/login/login.wxss */


/* 登录页面 */

.login {
    padding: 30rpx 55rpx;
}

.login_group .login_group_title {
    font-size: 50rpx;
    color: #333333;
}

.login_group .login_group_text {
    font-size: 27rpx;
    color: #999999;
    margin-top: 20rpx;
}

.login_form {
    width: 100%;
    margin-top: 90rpx;
}

.phone-box {
    width: 100%;
    height: 88rpx;
    border: 1rpx solid #E1E1E1;
    border-radius:4rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 0 30rpx;
    font-size: 32rpx;
}

.phone-box .number {
    width: 100%;
    color: #333;
    font-size: 32rpx;
}

.login_form_list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
}

.yzm {
    flex: 1;
}

.getNum {
    font-size: 32rpx;
    color: #00B89E;
    text-align: center;
    margin: 0 30rpx;
}
.getNum2 {
    font-size: 32rpx;
    color: #999999;
    text-align: center;
    margin: 0 30rpx;
}
.login_btn {
    width: 100%;
    margin-top: 98rpx;
    margin-bottom: 20rpx;
}

.login_btn .submit {
    width: 100%;
    height: 88rpx;
    background: #00B89E;
    border-radius: 8rpx;
    color: #fff;
    font-size: 36rpx;
    font-weight: normal;
    display: flex;
    align-items: center;
    justify-content: center;
}

checkbox {
    width: 26rpx;
    height: 26rpx;
}

checkbox .wx-checkbox-input {
    width: 26rpx;
    height: 26rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #fff;
    border: 1px solid #00B89E;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 26rpx;
    height: 26rpx;
    line-height: 24rpx;
    text-align: center;
    font-size: 20rpx;
    color: #00B89E;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

.agreement {
    font-size: 22rpx;
    color: #333333;
    margin-left: 20rpx;
    margin-top: 5.5rpx;
}

.check_group {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}