/* pages/myfollow/myfollow.wxss */
.tabs {
    display: flex;
    height: 85rpx;
    line-height: 85rpx;
    border-bottom: #EBECF1 1rpx solid;
    position: fixed;
    top:0;
    left:0;
    width:100%;
    background:#fff;
    z-index: 1;
}

.tabs .item {
    flex: 1;
    text-align: center;
    position: relative;
}

.tabs .item text {
    font-size: 28rpx;
    color: #999999;
    display: inline-block;
    height: 80rpx;
    padding: 0 20rpx;
}

.tabs .itemed text {
    color: #333333;
    font-weight: bold;
}

.tabs .itemed .h_line {
    width: 66rpx;
    height: 4rpx;
    background: #00B89E;
    position: absolute;
    bottom: -1rpx;
    left: 50%;
    margin-left: -33rpx;
}

.gsjsContain{
  margin-top:100rpx;
}
.item_group{
  padding:40rpx 30rpx 0;
}
.item_group_list{
  display: flex;
  border:1px solid #E6E6E6;
  align-items: center;
  padding:21rpx 22rpx;
}
.item_group_list .icon_pic{
  width:68rpx;
  height:68rpx;
  margin-right: 20rpx;
}
.icon_pic image{
  overflow: hidden;
  width:68rpx;
  height:68rpx;
  border-radius: 50%;
}
.item_group_list .group_list{
  display: flex;
  width:100%;
  justify-content: space-between;
  align-items: center;
}
.group_list .name{
  font-size:30rpx;
  color:#333333;
}
.group_list .follow_btn{
  font-size:24rpx;
  text-align: center;
  border-radius: 30rpx;
  width:132rpx;
  height: 56rpx;
  line-height: 56rpx;
}
.vf-active{
  border:1px solid #DADADA;
  color:#333333;
}
.vf{
  color:#00B69C;
  border:1px solid #00B69C;
}