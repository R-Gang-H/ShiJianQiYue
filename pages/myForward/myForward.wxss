/* pages/myForward/myForward.wxss */
page {
  background-color: #f6f6f6;
}
.myforward{
  padding:30rpx 30rpx 0;
}
.myforward .forward_item{
  background:#fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.forward_item .forward_item_title{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
}
.forward_item_title .green_lie{
  width:6rpx;
  height:36rpx;
  background:#00B89E;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  margin-right: 20rpx;
}
.forward_item_title .txt{
  font-weight: bold;
  color:#333333;
  font-size:26rpx;
}
.forward_item  .forward_item_in{
  padding:0 25rpx;
}
.forward_item .forward_item_cont{
  display:flex;
  justify-content: flex-start;
  border-bottom:1px solid #E8E8E8;
  padding:25rpx 0;
}
.forward_item_cont .forward_cont_pic{
  width:108rpx;
  margin-right:18rpx;
}
.forward_cont_pic image{
  width:108rpx;
  height:108rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.forward_item_cont .forward_cont_list{
  flex:1;
}
.forward_cont_list .cont_list_title{
  font-size: 24rpx;
  color:#333333;
  margin-bottom:15rpx;
}
.forward_cont_list .cont_list_con{
  font-size:22rpx;
  color:#999999;
  line-height: 30rpx;
}
.forward_item .forward_item_bottom{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 78rpx;
}
.forward_item_bottom .bottom_line{
  width:2rpx;
  height:42rpx;
  background:#E8E8E8;
}
.item_person .label{
  font-size:26rpx;
  color:#333333;
  margin-right: 20rpx;
}
.item_person .num{
  font-size:32rpx;
  color:#333333;
  font-weight: bold;
}