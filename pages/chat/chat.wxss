/* 表情输入框 */
.emoji {
  background-color: #fff;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  padding-top: 2rpx;
  box-sizing: border-box;
  font-size: 20rpx;
}

.emoji-box {
  position: relative;
  height: 245rpx;
  padding: 5rpx 0;
  box-sizing: border-box;

}

.emoji-cell {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx;
  display: inline-block;
}

.emoji-cell image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 3rpx;
}



.no-emoji-move {
  -webkit-animation: none;
  animation: none;
}