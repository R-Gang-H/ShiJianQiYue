<!--pages/orderComment/orderComment.wxml-->
<form bindsubmit="formSubmit" class="profile">
  <view class="item_group_list">
    <view class="item_cont">
      <view class="icon_pic">
        <image src="{{data.productImages}}"></image>
      </view>
      <view class="group_list">
        <view class="list_name">
          <view class="name">{{data.productNames}}</view>
          <view class="price">¥{{data.totalPrice}}</view>
        </view>
        <view class="list_cont">
          <view class="describe">{{data.productDesc}}</view>
          <view class="number"><text class="fh">{{fh}}</text>{{data.productNum}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="line"></view>
  <view class="formItem">
      <textarea class="section" name="commentContent" placeholder="请输入评价..."/>
  </view>
  <view class="sub"><button style="width:90%" form-type="submit" class="submit_btn">提交</button></view>
</form>
