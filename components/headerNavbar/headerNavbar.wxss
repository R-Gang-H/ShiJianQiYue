.navbar-wrap{
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 9999999;
  background-color: #3281FF;
  box-sizing: border-box;

}
.navbar-text {
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
}
.navbar-icon {
  position: fixed;
  display: flex;
}
.navbar-icon image {
  height: 37rpx;
  width: 21rpx;
  padding: 5px 10px 10px;
  display: inline-block;
  overflow: hidden;
}
.navbar-icon view {
  height: 18px;
  border-left: 0.5px solid rgba(255,255,255, 0.3);
  margin-top: 6px;
}
.navbar-loading{
  background:#fff;
  text-align:center;
}
.header_tabs {
    display: flex;
    justify-content: center;
    z-index: 1;
}

.header_tabs .item {
  text-align: center;
  position: relative;
}

.header_tabs .item text {
    font-size: 30rpx;
  color: #999999;
  display: inline-block;
  padding: 0 20rpx;
}

.header_tabs .itemed text {
    color: #333333;
    font-size:36rpx;
    font-weight: bold;
}